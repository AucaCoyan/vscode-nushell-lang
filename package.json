{
  "name": "vscode-nushell-lang",
  "displayName": "vscode-nushell-lang",
  "description": "nushell language for vscode",
  "version": "0.1.2",
  "preview": true,
  "license": "MIT",
  "publisher": "TheNuProjectContributors",
  "homepage": "https://www.nushell.sh/",
  "repository": {
    "type": "git",
    "url": "https://github.com/nushell/vscode-nushell-lang.git"
  },
  "bugs": {
    "url": "https://github.com/nushell/vscode-nushell-lang/issues"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "icon": "assets/nushell.ico",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "eslint": "^7.21.0",
    "typescript": "^4.2.2"
  },
  "keywords": [
    "nushell",
    "nu",
    "shell",
    "scripting"
  ],
  "galleryBanner": {
    "color": "#008000",
    "theme": "light"
  },
  "contributes": {
    "languages": [
      {
        "id": "nushell",
        "aliases": [
          "nushell",
          "nu"
        ],
        "extensions": [
          ".nu"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nushell",
        "scopeName": "source.nushell",
        "path": "./syntaxes/nushell.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Nushell-Dark",
        "id": "nushell",
        "uiTheme": "vs-dark",
        "path": "./nushell.theme-minimal-dark.json"
      },
      {
        "label": "Nushell-Light",
        "id": "nushell",
        "uiTheme": "vs",
        "path": "./nushell.theme-minimal-light.json"
      }
    ],
    "keybindings": [
      {
        "command": "start https://www.nushell.sh/book/",
        "key": "ctrl+f1",
        "when": "editorTextFocus && editorLangId == 'nushell'"
      },
      {
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == 'nushell'",
        "mac": "cmd+alt+j",
        "win": "ctrl+alt+j",
        "linux": "ctrl+alt+j"
      }
    ],
    "snippets": [
      {
        "language": "nushell",
        "path": "./snippets/nushell.json"
      }
    ]
  }
}
